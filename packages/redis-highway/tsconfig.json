{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true, /* Generate .d.ts files */
    "outDir": "./dist", /* Output folder */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}